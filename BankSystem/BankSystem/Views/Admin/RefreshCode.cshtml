@model BLL.Models.ViewModel.RefreshCodeModel
@{
    ViewBag.Title = "Код отмены платежа";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1>Код отмены оплаты</h1>
</div>

@using (Html.BeginForm("RefreshCode", "Admin", FormMethod.Post))
{
    <div class="page-content">
        <div>
            <p>@Html.TextBoxFor(m => m.Code)</p>
            @Html.ValidationMessageFor(m => m.Code)
        </div>
        <div><button type="submit" class="btn btn-success">Сохранить</button></div>
    </div>
}
