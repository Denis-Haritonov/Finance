@model BLL.Models.ViewModel.UserViewModel

@{
    ViewBag.Title = "Информация о клиенте";
}

<h2>Информация о клиенте</h2>
<div>
    Имя: @Model.UserName @Model.UserSurname @Model.UserLastName
</div>
<div>
    @Html.ActionLink("Заявки клиента", "ClientRequests", new {clientId = Model.UserId})
</div>
<div>
    @Html.ActionLink("Вклады клиента", "DepositsByClient", "Deposit", new {clientId = Model.UserId}, null)
</div>
@if (Model.ScoringMark.HasValue)
{
    <div>Скоринговая оценка: @Model.ScoringMark</div>
    <a href="http://mammonwebapi.azurewebsites.net/scoringsystem/answers?clientId=@(Model.UserId)" target="_blank">Просмотреть ответы</a>
}
else
{
    <div>Клиент не заполнил скоринговую анкету</div>
}